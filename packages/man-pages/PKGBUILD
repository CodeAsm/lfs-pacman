pkgname=man-pages
pkgver=6.06
pkgrel=1
pkgdesc="Linux man pages"
arch=('x86_64')
url="http://man7.org/linux/man-pages/index.html"
license=('GPL')
source=(${pkgname}-${pkgver}.tar.xz)

prepare() {
    cd "${pkgname}-${pkgver}"
    rm -v man3/crypt*
}

package() {
    cd "${pkgname}-${pkgver}"
    make DESTDIR=${pkgdir} install
}
